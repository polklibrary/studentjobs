<metal:page
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    use-macro="load: master.pt">
    
    <tal:block metal:fill-slot="content">

        <div id="issue" tal:condition="issue">
            ${issue}
        </div>
        
        <form id="login" method="post" action="${request.application_url}/login">
            <h3>Login</h3>
            <div>
                <label>Email: <input type="text" name="email" value="" /></label>
                <label>Password: <input type="password" name="pass" value="" /></label>

                <div class="buttons">
                    <input class="button blue" type="submit" name="submit" value="Login" />
                </div>
            </div>
        </form>
        
    </tal:block>
     
</metal:page>